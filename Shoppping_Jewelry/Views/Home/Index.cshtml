<partial name="_SliderPatial" />

<div class="col-sm-3">
    @Html.Partial("_Sidebar")
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <h2 class="title text-center">Danh sách sản phẩm</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="notification" class="alert alert-success" style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 1000;">
                @TempData["SuccessMessage"]
            </div>
            <script>
                setTimeout(function() {
                    document.getElementById('notification').style.display = 'none';
                }, 3000);
            </script>
        }

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-md-4 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                <img src="~/media/products/@item.Image" alt="@item.Name" class="img-fluid" />
                            </a>
                        </div>
                        <div class="product-details text-center">
                            <h3 class="product-name">@item.Name</h3>
                            <p class="product-price">@item.Price.ToString("#,##0 VNĐ")</p>
                            <p class="product-meta">Danh mục: @item.Category.Name</p>
                            <p class="product-meta">Thương hiệu: @item.Brand.Name</p>
                            @if (item.Quantity > 0)
                            {
                                <button class="btn btn-add-cart" data-product_id="@item.Id">
                                    <i class="fa fa-shopping-cart"></i> Thêm giỏ hàng
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-out-of-stock" disabled>
                                    <i class="fa fa-shopping-cart"></i> Hết hàng
                                </button>
                            }
                        </div>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="product-actions">
                                <button class="btn btn-wishlist add-btn-wishlist" data-product_id="@item.Id">
                                    <i class="fa fa-heart"></i> Yêu thích
                                </button>
                                <button class="btn btn-compare add-btn-compare" data-product_id="@item.Id">
                                    <i class="fa fa-exchange"></i> So sánh
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .features_items {
        padding: 20px;
    }

    .product-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .product-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .product-details {
        padding: 15px;
    }

    .product-name {
        font-size: 1.2rem;
        margin: 10px 0;
        color: #333;
        font-weight: 600;
    }

    .product-price {
        font-size: 1.1rem;
        color: #e74c3c;
        font-weight: bold;
        margin: 5px 0;
    }

    .product-meta {
        font-size: 0.9rem;
        color: #777;
        margin: 5px 0;
    }

    .btn-add-cart {
        background: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

        .btn-add-cart:hover {
            background: #2980b9;
        }

    .btn-out-of-stock {
        background: #ccc;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: not-allowed;
    }

    .product-actions {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        border-top: 1px solid #eee;
    }

    .btn-wishlist, .btn-compare {
        background: transparent;
        border: 1px solid #ddd;
        padding: 8px 15px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-wishlist:hover {
            background: #e74c3c;
            color: #fff;
            border-color: #e74c3c;
        }

        .btn-compare:hover {
            background: #3498db;
            color: #fff;
            border-color: #3498db;
        }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>

@section Scripts {
    <script>
        $('.btn-add-cart').click(function () {
            var Id = $(this).data("product_id");
            $.ajax({
                type: "POST",
                url: "@Url.Action("Add", "Cart")",
                data: { Id: Id },
                success: function (result) {
                    if (result) {
                        Swal.fire("Thêm giỏ hàng thành công.");
                    }
                }
            });
        });

        $(document).ready(function () {
            $('.add-btn-wishlist').click(function () {
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddWishlist", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire("Thêm yêu thích sản phẩm thành công.");
                        }
                    }
                });
            });

            $('.add-btn-compare').click(function () {
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddCompare", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire("Thêm so sánh thành công.");
                        }
                    }
                });
            });
        });
    </script>
}