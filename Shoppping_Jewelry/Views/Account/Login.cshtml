@model LoginViewModel
@{
	ViewData["Title"] = "Trang đăng nhập";
}
<section id="form"><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng nhập</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						

						<div class="form-group">
							<label>Tên đăng nhập</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Mật khẩu</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						<button class="btn btn-success">Đăng nhập</button>
						<a href="@Url.Action("Create", "Account")" class="btn btn-info" style="margin-top: 10px;">Chưa có tài khoản? Đăng ký</a>
					</form>

				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}