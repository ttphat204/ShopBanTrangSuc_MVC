@model AppUserModel

@{
    ViewData["title"] = "Cập nhật Khách hàng";
}

<h4>Cập nhật khách hàng</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Tên khách hàng:</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Số điện thoại:</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Mật khẩu:</label>
            <input asp-for="PasswordHash" required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Roles:</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles"></select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-success btn-primary">Cập nhật User...</button>
        </div>
    </form>
    <a asp-action="Index">Quay trở lại trang trước</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
