@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Roles";
    Paginate pager = new Paginate();
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
    }
}

<h3>Danh sách roles</h3>
<a asp-action="Create" class="btn btn-success btn-sm" asp-controller="Role">Thêm Roles</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col" style="text-align:center">ID Role</th>
            <th scope="col" style="text-align:center">Tên Role</th>
            <th scope="col" style="text-align:center">Hành động</th> <!-- Thêm cột hành động -->
        </tr>
    </thead>
    <tbody style="text-align:center">
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Paging" model="@pager" />